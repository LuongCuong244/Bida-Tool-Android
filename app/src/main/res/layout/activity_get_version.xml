<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_gradient"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19.5sp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textColor="#535353"
            android:letterSpacing="0.02"

            android:text="- Ứng dụng này còn có 1 phiên bản khác dành cho máy tính với đầy đủ tính năng như: ngắm bắn, đập băng, cộng bi,...\n- Để lấy link cài đặt, hãy xem đủ 10 quảng cáo.)"/>

        <TextView
            android:id="@+id/txtNumberOfAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:textSize="16sp"
            android:text="Số quảng cáo đã xem: 0"
            android:layout_marginTop="7dp"/>

        <Button
            android:id="@+id/btnDisplayAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xem quảng cáo"
            android:textStyle="bold"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/custom_button_getpcversion"
            android:textSize="21sp"
            android:letterSpacing="0.05"
            android:textColor="#16a732"/>

        <LinearLayout
            android:id="@+id/get_link_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#000000"
                android:layout_marginLeft="20sp"
                android:text="* Link drive:"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2872ed"
                android:textSize="17sp"
                android:layout_marginHorizontal="5dp"
                android:text="https://drive.google.com/file/d/1qN-MDkcOD-OFAct-4KbtM1oMqwxNqx6p/view?usp=sharing"
                android:textStyle="italic"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"
                android:letterSpacing="0.02"
                android:text="* Lưu ý: File hướng dẫn sử dụng nằm ở thư mục C://Program Files(x86)//Bi-da Suport//HUONG_DAN.txt"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>